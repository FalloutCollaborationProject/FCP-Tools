<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- =============================== Shuttle Crash Site =============================== -->

  <IncidentDef>
    <defName>FCP_CrashSite</defName>
    <label>crash site</label>
    <category>Misc</category>
    <targetTags>
      <li>Caravan</li>
      <li>Map_TempIncident</li>
    </targetTags>
    <workerClass>FCP_CaravanIncidents.IncidentWorker_ShuttleCrash</workerClass>
    <pointsScaleable>true</pointsScaleable>
    <baseChance>2</baseChance>
    <minRefireDays>5</minRefireDays>
    <mtbDaysByBiome>
      <TemperateForest>20</TemperateForest>
      <BorealForest>20</BorealForest>
      <TropicalRainforest>20</TropicalRainforest>
      <AridShrubland>20</AridShrubland>
      <Desert>30</Desert>
      <Tundra>30</Tundra>
      <TropicalSwamp>30</TropicalSwamp>
      <TemperateSwamp>30</TemperateSwamp>
      <ColdBog>35</ColdBog>
      <ExtremeDesert>35</ExtremeDesert>
      <IceSheet>40</IceSheet>
      <SeaIce>60</SeaIce>
    </mtbDaysByBiome>
  </IncidentDef>

  <!-- =============================== Shady Traders =============================== -->


  <IncidentDef>
    <defName>FCP_ShadyTraders</defName>
    <label>shady trader</label>
    <category>Misc</category>
    <targetTags>
      <li>Caravan</li>
      <li>Map_TempIncident</li>
    </targetTags>
    <workerClass>FCP_CaravanIncidents.IncidentWorker_ShadyTraders</workerClass>
    <minThreatPoints>100</minThreatPoints>
    <pointsScaleable>true</pointsScaleable>
    <baseChance>2</baseChance>
    <minRefireDays>5</minRefireDays>
    <mtbDaysByBiome>
      <TemperateForest>20</TemperateForest>
      <BorealForest>20</BorealForest>
      <TropicalRainforest>20</TropicalRainforest>
      <AridShrubland>20</AridShrubland>
      <Desert>30</Desert>
      <Tundra>30</Tundra>
      <TropicalSwamp>30</TropicalSwamp>
      <TemperateSwamp>30</TemperateSwamp>
      <ColdBog>35</ColdBog>
      <ExtremeDesert>35</ExtremeDesert>
      <IceSheet>40</IceSheet>
      <SeaIce>60</SeaIce>
    </mtbDaysByBiome>
    <modExtensions>
      <li Class="FCP_CaravanIncidents.IncidentDefExtension">
        <traderKindDef>FCP_Scavenger_Trader</traderKindDef>
        <pawnGroupKindDef>Combat</pawnGroupKindDef>
        <factionDef>PirateWaster</factionDef>
      </li>
    </modExtensions>
  </IncidentDef>

