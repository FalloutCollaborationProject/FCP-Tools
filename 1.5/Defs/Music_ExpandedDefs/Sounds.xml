<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--__________ Music Expanded SoundDefs __________-->

    <!-- Wasteland Scenario Begin -->

    <SoundDef>
        <defName>FCP_Wasteland_Scenario_Begin</defName>
        <modExtensions>
            <li Class="MusicExpanded.ModExtension.ReplacesSounds">
                <sounds>
                    <li>GameStartSting</li>
                </sounds>
            </li>
        </modExtensions>
        <subSounds>
            <li>
                <onCamera>True</onCamera>
                <grains>
                    <li Class="AudioGrain_Clip">
                        <clipPath>MusicExpanded/Wasteland/Wasteland_Scenario_Begin</clipPath>
                    </li>
                </grains>
                <volumeRange>100~100</volumeRange>
            </li>
        </subSounds>
    </SoundDef>

