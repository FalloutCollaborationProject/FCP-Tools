<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Hidden Factions __________-->

    <!--_____ Wastelanders _____-->

    <FactionDef ParentName="FactionBase">
        <defName>FCP_Faction_Hidden_Wastelanders</defName>
        <pawnSingular>Wastelander</pawnSingular>
        <pawnsPlural>Wastelanders</pawnsPlural>
        <categoryTag>FCP_Wastelanders</categoryTag>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
        <configurationListOrderPriority>2000</configurationListOrderPriority>
        <displayInFactionSelection>false</displayInFactionSelection>
        <fixedName>Wastelanders</fixedName>
        <factionIconPath>World/WorldObjects/Expanding/Sites/DownedRefugee</factionIconPath>
        <techLevel>Spacer</techLevel>
        <backstoryFilters>
            <li>
                <categories>
                    <li>FCP_Wastelander</li>
                    <li>FCP_Wastelander_Child</li>
                </categories>
            </li>
        </backstoryFilters>
        <hidden>true</hidden>
        <rescueesCanJoin>true</rescueesCanJoin>
        <autoFlee>false</autoFlee>
        <requiredMemes>
            <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
        </requiredMemes>
        <disallowedMemes>
            <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
        </disallowedMemes>
        <caravanTraderKinds>
            <li>FCP_Caravan_Brahmin_Herder</li>
        </caravanTraderKinds>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(700, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        <pawnGroupMakers>

            <!-- Wastelander -->

            <li>
                <!-- Distance fights, scout recon troopers -->
                <kindDef>Combat</kindDef>
                <disallowedStrategies>
                    <li>EmergeFromWater</li>
                </disallowedStrategies>
                <options>
                    <FCP_Armored_Wastelander_Combat_Armor>6</FCP_Armored_Wastelander_Combat_Armor>
                    <FCP_Armored_Wastelander_Combat_Armor_Modular>4</FCP_Armored_Wastelander_Combat_Armor_Modular>
                    <FCP_Armored_Wastelander_Combat_Armor_Reinforced>3</FCP_Armored_Wastelander_Combat_Armor_Reinforced>
                    <FCP_Armored_Wastelander_Combat_Armor_Reinforced_MK_II>1</FCP_Armored_Wastelander_Combat_Armor_Reinforced_MK_II>
                </options>
            </li>

            <!-- Traders -->

            <li Class="FCP.Core.GroupMakerWithTraderKind">
                <kindDef>Trader</kindDef>
                <traders>
                    <FCP_Wastelander_Trader_Crow>1</FCP_Wastelander_Trader_Crow>
                </traders>
                <carriers>
                    <FCP_Animal_Brahmin>6</FCP_Animal_Brahmin>
                </carriers>
                <guards>
                    <FCP_Wastelander_Caravan_Guard>5</FCP_Wastelander_Caravan_Guard>
                </guards>
            </li>
        </pawnGroupMakers>
        <modExtensions Inherit="False">
            <li Class="FCP.Core.ModExtension_HiddenFactionHasCaravans" />
            <!-- Make them unable to use drop pods -->
            <li Class="FCP.Core.ModExtension_FactionBannedArrivalModes">
                <arrivalModes>
                    <li>EdgeDrop</li>
                    <li>EdgeDropGroups</li>
                    <li>CenterDrop</li>
                    <li>RandomDrop</li>
                </arrivalModes>
            </li>
        </modExtensions>
    </FactionDef>

</Defs>