<Defs>

<!--__Power Armor Helmets__-->

<!-- T45 Helmet -->

    <ThingDef ParentName="HatBase">
        <defName>FCP_Apparel_Power_Armor_T45_Helmet</defName>
        <label>T45 Helmet</label>
        <description>PLACEHOLDER</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Apparel/Power_Armor_Headgear/T45_Helmet/FCP_T45_Power_Armor_Helmet_south</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <smeltable>false</smeltable>
        <statBases>
            <WorkToMake>3000</WorkToMake>
            <MaxHitPoints>80</MaxHitPoints>
            <Mass>0.8</Mass>
            <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
            <ArmorRating_Blunt>1.00</ArmorRating_Blunt>
            <ArmorRating_Heat>0.80</ArmorRating_Heat>
            <Insulation_Heat>2</Insulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Power_Armor_Headgear/T45_Helmet/FCP_T45_Power_Armor_Helmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
        <comps>
			<li Class="RangerRick_PowerArmor.CompProperties_PowerArmor">
				<requiredApparels>
					<li>FCP_Apparel_Power_Armor_Frame</li>
				</requiredApparels>
				<workDisables>
					<li>Construction</li>
				</workDisables>
				<canSleep>False</canSleep>
				<requiredTrait>FCP_Power_Armor_Trained</requiredTrait>
			</li>
		</comps>
    </ThingDef>

