<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--__________ Power Armor - Basic __________-->

	<!-- Power Armor Frame -->

	<ThingDef ParentName="ApparelBase">
		<defName>FCP_Apparel_Power_Armor_Frame</defName>
		<label>Power_Armor_Frame</label>
		<description>.</description>
		<smeltable>false</smeltable>
		<thingSetMakerTags>
			<li>RewardStandardMidFreq</li>
		</thingSetMakerTags>
		<possessionCount>1</possessionCount>
		<graphicData>
			<texPath>Things/Apparel/Power_Armors/Power_Armor_Frame/FCP_Power_Armor_Frame</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<tickerType>Normal</tickerType>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToMake>10200</WorkToMake>
			<Mass>6.0</Mass>
			<ArmorRating_Sharp>1.08</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.88</ArmorRating_Blunt>
			<ArmorRating_Heat>0.40</ArmorRating_Heat>
			<Insulation_Cold>3</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<EquipDelay>1.2</EquipDelay>
		</statBases>
		<apparel>
			<shellRenderedBehindHead>true</shellRenderedBehindHead>
			<bodyPartGroups>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Power_Armors/Power_Armor_Frame/FCP_Power_Armor_Frame</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>FCP_Power_Armor</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<tradeTags>
			<li>FCP_Power_Armor_Basic</li>
		</tradeTags>
		<comps>
			<li Class="RangerRick_PowerArmor.CompProperties_ApparelDependency"></li>
			<li Class="RangerRick_PowerArmor.CompProperties_PowerArmor">
				<requiredTrait>FCP_Power_Armor_Trained</requiredTrait>
				<hediffOnEmptyFuel>FCP_Power_Armor_Empty_Fusion_Core</hediffOnEmptyFuel>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelCapacity>1</fuelCapacity>
				<fuelConsumptionRate>100</fuelConsumptionRate>
				<fuelLabel>Fusion Core</fuelLabel>
				<fuelGizmoLabel>Fusion Core</fuelGizmoLabel>
				<outOfFuelMessage>Needs Fusion Core</outOfFuelMessage>
				<showFuelGizmo>true</showFuelGizmo>
				<fuelFilter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</fuelFilter>
				<initialFuelPercent>1</initialFuelPercent>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
			</li>
		</comps>
        <modExtensions>
            <li Class="FalloutCore.ApparelExtension">
                <shouldHideBody>True</shouldHideBody>
                <displayBodyType>Hulk</displayBodyType>
            </li>
        </modExtensions>
	</ThingDef>

</Defs>