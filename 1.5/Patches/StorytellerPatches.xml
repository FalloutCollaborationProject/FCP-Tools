<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <!--__________ Patch Storytellers __________-->

    <!-- Give storyteller joiner quest. -->

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/StorytellerDef[@Name="BaseStoryteller"]/comps</xpath>
        <value>
            <!-- Storyteller Joiner -->
            <li Class="StorytellerCompProperties_SingleOnceFixed">
                <fireAfterDaysPassed>4</fireAfterDaysPassed>
                <incident>FCP_GiveQuest_StorytellerJoiner</incident>
                <minColonistCount>1</minColonistCount>
                <allowedTargetTags>
                    <li>World</li>
                </allowedTargetTags>
            </li>
        </value>
    </Operation>

</Patch>