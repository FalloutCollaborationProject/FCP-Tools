<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!--__________ Patches __________-->

	<!-- Vertibird Raid Patch -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/RaidStrategyDef[defName = "FCP_VertibirdAttack"]/selectionWeightCurvesPerFaction</xpath>
		<value>
			<!-- NCR -->
			<li MayRequire="Rick.FCP.NCR">
				<faction>FCP_Faction_NCR</faction>
				<selectionWeightPerPointsCurve>
					<points>
						<li>(0, 1)</li>						<!-- Constant 1 -->
					</points>
				</selectionWeightPerPointsCurve>
			</li>
			<!-- Brotherhood of Steel -->
			<li MayRequire="Rick.FCP.BoS">
				<faction>FCP_Faction_BoS</faction>
				<selectionWeightPerPointsCurve>
					<points>
						<li>(0, 1)</li>						<!-- Constant 1 -->
					</points>
				</selectionWeightPerPointsCurve>
			</li>
			<li MayRequire="Rick.FCP.BoS">
				<faction>FCP_Faction_BoS_Outcast_Remnants</faction>
				<selectionWeightPerPointsCurve>
					<points>
						<li>(0, 1)</li>						<!-- Constant 1 -->
					</points>
				</selectionWeightPerPointsCurve>
			</li>
			<li MayRequire="Rick.FCP.BoS">
				<faction>FCP_Faction_BoS_Lyons_Pride_Remnants</faction>
				<selectionWeightPerPointsCurve>
					<points>
						<li>(0, 1)</li>						<!-- Constant 1 -->
					</points>
				</selectionWeightPerPointsCurve>
			</li>
		</value>
	</Operation>

</Patch>