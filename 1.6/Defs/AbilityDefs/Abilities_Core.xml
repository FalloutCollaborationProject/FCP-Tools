<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Core Abilities __________-->

    <!-- V.A.T.S. -->

    <AbilityDef>
        <defName>FC_VATS_Attack</defName>
        <label>V.A.T.S.</label>
        <description>Attack with V.A.T.S.</description>
        <aiCanUse>false</aiCanUse>
        <iconPath>UI/FCP_VATS_Logo_Small</iconPath>
        <gizmoClass>FCP.Core.VATS.Command_VATS</gizmoClass>
        <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
        <targetRequired>True</targetRequired>
        <hotKey>Misc12</hotKey>
        <hostile>true</hostile>
        <casterMustBeCapableOfViolence>true</casterMustBeCapableOfViolence>
        <cooldownTicksRange>600</cooldownTicksRange>
        <verbProperties>
            <verbClass>FCP.Core.VATS.Verb_AbilityVATS</verbClass>
            <onlyManualCast>true</onlyManualCast>
            <defaultCooldownTime>30</defaultCooldownTime>
            <minRange>0</minRange>
            <surpriseAttack>
                <extraMeleeDamages>
                    <li>
                        <def>Stun</def>
                        <amount>20</amount>
                    </li>
                </extraMeleeDamages>
            </surpriseAttack>
            <targetParams>
                <canTargetLocations>false</canTargetLocations>
                <canTargetPawns>true</canTargetPawns>
                <canTargetAnimals>true</canTargetAnimals>
                <canTargetMechs>true</canTargetMechs>
                <canTargetSubhumans>true</canTargetSubhumans>
                <canTargetPlants>false</canTargetPlants>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetCorpses>false</canTargetCorpses>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="CompProperties_AbilityRequiresCapacity">
                <capacity>Manipulation</capacity>
            </li>
        </comps>
    </AbilityDef>

    <!-- Fire Breath -->

    <AbilityDef>
        <defName>FCP_Ability_Burner</defName>
        <label>Fire Breath</label>
        <description>Firey breath</description>
        <iconPath>UI/Abilities/Burner</iconPath>
        <aiCanUse>true</aiCanUse>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        <warmupStartSound>FireSpew_Warmup</warmupStartSound>
        <showOnCharacterCard>true</showOnCharacterCard>
        <cooldownTicksRange>60</cooldownTicksRange>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <requireLineOfSight>true</requireLineOfSight>
            <range>8.5</range>
            <warmupTime>0.5</warmupTime>
            <soundCast>FireSpew_Resolve</soundCast>
            <targetParams>
                <canTargetLocations>true</canTargetLocations>
            </targetParams>
            <flammabilityAttachFireChanceCurve>
                <points>
                    <li>(0.2, 0)</li>
                    <li>(1, 1)</li>
                </points>
            </flammabilityAttachFireChanceCurve>
        </verbProperties>
        <comps>
            <li Class="CompProperties_AbilityFireSpew">
                <range>10</range>
                <lineWidthEnd>3</lineWidthEnd>
                <filthDef>Filth_FlammableBile</filthDef>
                <effecterDef>Fire_Spew</effecterDef>
                <canHitFilledCells>true</canHitFilledCells>
            </li>
        </comps>
    </AbilityDef>

    <!-- Nightstalker Shadow Cloak -->

    <AbilityDef>
        <defName>FCP_Ability_Nightstalker_ShadowCloak</defName>
        <label>shadow cloak</label>
        <description>The nightstalker uses its natural stealth abilities to become nearly invisible, striking from the shadows.</description>
        <iconPath>UI/Abilities/Invisibility</iconPath>
        <cooldownTicksRange>3000</cooldownTicksRange> <!-- 3 seconds (short cooldown for frequent use) -->
        <aiCanUse>true</aiCanUse>
        <ai_SearchAOEForTargets>true</ai_SearchAOEForTargets>
        <hostile>false</hostile>
        <targetRequired>false</targetRequired>
        <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
        <statBases>
            <Ability_Duration>8</Ability_Duration>
        </statBases>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <drawAimPie>false</drawAimPie>
            <requireLineOfSight>false</requireLineOfSight>
            <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
            <warmupTime>0.5</warmupTime>
            <range>0</range>
            <targetable>false</targetable>
            <targetParams>
                <canTargetSelf>True</canTargetSelf>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>PsychicInvisibility</hediffDef>
            </li>
        </comps>
    </AbilityDef>

    <!-- Chameleon Cloak -->

    <AbilityDef>
        <defName>FCP_Ability_Deathclaw_ChameleonCloak</defName>
        <label>chameleon cloak</label>
        <description>The deathclaw uses its natural camouflage abilities to blend into its surroundings, becoming nearly invisible to enemies.</description>
        <iconPath>UI/Abilities/Invisibility</iconPath>
        <cooldownTicksRange>300000</cooldownTicksRange> <!-- 300 seconds (long cooldown for rare use) -->
        <aiCanUse>true</aiCanUse>
        <ai_SearchAOEForTargets>true</ai_SearchAOEForTargets>
        <hostile>true</hostile>
        <targetRequired>false</targetRequired>
        <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
        <statBases>
            <Ability_Duration>20</Ability_Duration>
        </statBases>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <drawAimPie>false</drawAimPie>
            <requireLineOfSight>false</requireLineOfSight>
            <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
            <warmupTime>0.5</warmupTime>
            <range>0</range>
            <targetable>false</targetable>
            <targetParams>
                <canTargetSelf>True</canTargetSelf>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>PsychicInvisibility</hediffDef>
            </li>
        </comps>
    </AbilityDef>

</Defs>
