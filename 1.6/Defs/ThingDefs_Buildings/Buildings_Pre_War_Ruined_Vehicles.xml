<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Pre-War Vehicle Ruins __________-->

    <!--_____ US ARMY _____-->

    <!-- Pre-War US Army Truck -->

    <ThingDef ParentName="NonDeconstructibleAncientBuildingBase">
        <defName>FCP_Pre_War_Army_Truck</defName>
        <label>Pre-War US Army Truck</label>
        <description>An old, destroyed military truck. Used by the great nations before the bombs droped.</description>
        <graphicData>
            <texPath>Things/Building/Ruins/PreWarArmyTruckDestroyed/FCP_Pre_War_Army_Truck_Destroyed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(9,9)</drawSize>
            <shadowData>
                <volume>(0.8, 0.7, 3.4)</volume>
            </shadowData>
        </graphicData>
        <size>(4,7)</size>
        <fillPercent>0.5</fillPercent>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <statBases>
            <MaxHitPoints>600</MaxHitPoints>
        </statBases>
        <killedLeavings>
            <ChunkSlagSteel>2</ChunkSlagSteel>
        </killedLeavings>
        <comps>
            <li Class="CompProperties_Usable">
                <useJob>UseItem</useJob>
                <useLabel>Collect {0}</useLabel>
    <showUseGizmo>true</showUseGizmo>
            </li>
            <li Class="FCP.Core.CompProperties_UseEffectItemBox">
                <numWeightedDrops>3</numWeightedDrops>
                <guaranteedDrops>
                </guaranteedDrops>
                <weightedDrops>
                    <li>
                        <thingDef>FCP_Currency_Caps</thingDef>
                        <countRange>50~100</countRange>
                    </li>
                    <li MayRequire="Rick.FCP.Wastelanders">
                        <thingDef>FCP_Apparel_Army_Helmet</thingDef>
                        <countRange>1~3</countRange>
						<!-- <weight>0.5</weight> -->
                    </li>
                    <li MayRequire="Rick.FCP.Wastelanders">
                        <thingDef>FCP_Apparel_Gas_Ranger_Gas_Mask</thingDef>
                        <countRange>1</countRange>
						<!-- <weight>0.3</weight> -->
                    </li>
                    <li MayRequire="Rick.FCP.Wastelanders">
                        <thingDef>FCP_Apparel_Military_Fatigues</thingDef>
                        <countRange>1~3</countRange>
						<!-- <weight>0.4</weight> -->
                    </li>
                    <li MayRequire="Rick.FCP.Wastelanders">
                        <thingDef>FCP_Apparel_Army_Uniform</thingDef>
                        <countRange>1~3</countRange>
						<!-- <weight>0.4</weight> -->
                    </li>
                </weightedDrops>
            </li>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
        </comps>
    </ThingDef>

