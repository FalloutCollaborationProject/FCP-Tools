    <PawnKindDef ParentName="FCP_WastelanderkindBase">
        <defName>FCP_Pawnkind_Wastelander_Trader_Angela_Staley</defName>
        <label>Merchant</label>
        <trader>true</trader>
        <combatPower>30</combatPower>
        <apparelRequired>
            <li>FCP_Apparel_Caravaneer_Outfit</li>
