<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Traits __________-->

    <!--_____ Singular _____-->

    <!-- Power Armor Trained -->

    <TraitDef>
        <defName>FCP_Trait_Power_Armor_Trained</defName>
        <commonality>1</commonality>
        <degreeDatas>
            <li>
                <label>Power Armor Trained</label>
                <description>{PAWN_nameDef} has completed basic power armor training. {PAWN_pronoun} is ready to take on the wasteland in any suit of power armor they see fit.</description>
            </li>
        </degreeDatas>
    </TraitDef>

    <!-- Tough -->

    <TraitDef>
        <defName>FCP_Trait_Tough</defName>
        <commonality>1</commonality>
        <degreeDatas>
            <li>
                <label>Tough</label>
                <description>{PAWN_nameDef} is exceptionally tough, taking less damage from all sources.</description>
                <statOffsets>
                    <ArmorRating_Sharp>0.10</ArmorRating_Sharp>
                    <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
                    <ArmorRating_Heat>0.10</ArmorRating_Heat>
                </statOffsets>
            </li>
        </degreeDatas>
    </TraitDef>

